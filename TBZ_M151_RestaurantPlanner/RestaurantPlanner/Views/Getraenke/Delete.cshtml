@model RestaurantPlanner.Models.Getraenk

@{
    ViewBag.Title = "Getränk Löschen";
}

<h2>Löschen</h2>

<h3>Bist du sicher das du dieses Getränk löschen willst?</h3>
<div>
    <h4>Getränk</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GetraenkName)
        </dd>

        <dt>
            Preis
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GetraenkPreis)
        </dd>

        <dt>
            Heiss
        </dt>

        <dd>
            @Html.DisplayFor(model => model.HeissesGetraenk)
        </dd>

        <dt>
            mit Alkohol
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AlkoholischesGetraenk)
        </dd>

        <dt>
            Mass
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GetraenkMenge)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Zurück zur Liste", "Index")
        </div>
    }
</div>
